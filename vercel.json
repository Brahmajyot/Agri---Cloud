{
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
        {
            "source": "/(sitemap_v2\\.xml|robots\\.txt)",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "text/xml; charset=utf-8"
                },
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        },
        {
            "source": "/robots.txt",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "text/plain"
                }
            ]
        },
        {
            "source": "/((?!sitemap\\.xml|robots\\.txt|api/).*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "SAMEORIGIN"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                },
                {
                    "key": "Permissions-Policy",
                    "value": "camera=(), microphone=(), geolocation=()"
                },
                {
                    "key": "Cross-Origin-Opener-Policy",
                    "value": "same-origin-allow-popups"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/((?!api/|assets/|logo\\.jpg|vite\\.svg|manifest\\.json|favicon\\.ico|sitemap_v2\\.xml|robots\\.txt|google.*\\.html).*)",
            "destination": "/index.html"
        }
    ]
}